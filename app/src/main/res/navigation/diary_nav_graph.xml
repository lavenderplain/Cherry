<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/diary_nav_graph"
    app:startDestination="@id/diaryListFragment">

    <fragment
        android:id="@+id/diaryListFragment"
        android:name="com.diary.cherry.ui.DiaryListFragment"
        android:label="@string/diary_list_title">
        <action
            android:id="@+id/action_diaryListFragment_to_diaryEditorFragment"
            app:destination="@id/diaryEditorFragment" />
        <action
            android:id="@+id/action_diaryListFragment_to_diaryDetailFragment"
            app:destination="@id/diaryDetailFragment" />
        <action
            android:id="@+id/action_diaryListFragment_to_diarySettingsFragment"
            app:destination="@id/diarySettingsFragment" />
        <!-- 添加备忘录导航 -->
        <action
            android:id="@+id/action_diaryListFragment_to_reminderListFragment"
            app:destination="@id/reminderListFragment" />
    </fragment>

    <fragment
        android:id="@+id/diaryEditorFragment"
        android:name="com.diary.cherry.ui.DiaryEditorFragment"
        android:label="@string/diary_editor_title" />

    <fragment
        android:id="@+id/diaryDetailFragment"
        android:name="com.diary.cherry.ui.DiaryDetailFragment"
        android:label="@string/diary_detail_title" />

    <fragment
        android:id="@+id/diarySettingsFragment"
        android:name="com.diary.cherry.ui.DiarySettingsFragment"
        android:label="@string/diary_settings_title" />

    <!-- 添加备忘录相关的Fragment -->
    <fragment
        android:id="@+id/reminderListFragment"
        android:name="com.diary.cherry.ui.ReminderListFragment"
        android:label="@string/reminder_list_title">
        <action
            android:id="@+id/action_reminderListFragment_to_reminderEditorFragment"
            app:destination="@id/reminderEditorFragment" />
    </fragment>

    <fragment
        android:id="@+id/reminderEditorFragment"
        android:name="com.diary.cherry.ui.ReminderEditorFragment"
        android:label="@string/reminder_editor_title" />

</navigation>