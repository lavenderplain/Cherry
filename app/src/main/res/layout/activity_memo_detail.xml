<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".MemoDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 头部操作栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_btn"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:contentDescription="@string/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/memo_title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/complete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/complete"
                app:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/delete"
                app:backgroundTint="#FF5252" />

            <Button
                android:id="@+id/mode_switch_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                app:backgroundTint="?attr/colorPrimary" />

        </LinearLayout>

        <!-- 日期信息 -->
        <TextView
            android:id="@+id/date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/creation_time"
            android:textColor="#666"
            android:textSize="12sp" />

        <!-- 标题区域 -->
        <TextView
            android:id="@+id/title_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_memo"
            android:elevation="2dp"
            android:padding="12dp"
            android:text="@string/title_hint"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_edit_memo"
            android:elevation="2dp"
            android:hint="@string/title_hint"
            android:importantForAutofill="no"
            android:inputType="textCapSentences"
            android:padding="12dp"
            android:textSize="18sp"
            android:visibility="gone" />

        <!-- 内容区域 -->
        <TextView
            android:id="@+id/content_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corner_memo"
            android:elevation="2dp"
            android:padding="12dp"
            android:text="@string/content_hint"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/content_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corner_edit_memo"
            android:elevation="2dp"
            android:gravity="top"
            android:hint="@string/content_hint"
            android:importantForAutofill="no"
            android:inputType="textMultiLine|textCapSentences"
            android:minLines="5"
            android:padding="12dp"
            android:textSize="14sp"
            android:visibility="gone" />

        <!-- 提醒设置区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corner_memo"
            android:elevation="2dp"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/reminder_settings"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/reminder_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/reminder_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/reminder_time_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/select_reminder_time"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/set_reminder_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/set" />

                <Button
                    android:id="@+id/cancel_reminder_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/cancel"
                    app:backgroundTint="#FF5252" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
